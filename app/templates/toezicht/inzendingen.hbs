<div class="grid grid--collapse">
  <div class="{{if hasActiveChildRoute "col--7-12 u-hidden--tablet-portrait-up u-visible--tablet-landscape-up"
                   "col--12-12"}}">
    <div class="container-flex--contain">
      <div class="u-border--fat--bottom u-hide-on-print">
        <div class="u-padding--round--small">
          <div class="grid">
            <div class="col--4-12 col--1-1--s">
              <h1 class="h2 u-spacer--right--small u-display-inline-block">Toezicht ABB</h1>
            </div>

            <div class="col--8-12 col--1-1--s u-align-right--tablet-portrait-up">
              <WuButtonGroup>
                <div class="u-display--inline-block u-padding--right--small">
                  <LinkTo @route="supervision">Toezicht ABB (new)</LinkTo>
                </div>
                <div class="u-display--inline-block u-padding--right--small">
                  <div class="checkbox--switch__wrapper checkbox--switch--small">
                    <WuSwitch @label="Toon enkel te behandelen dossiers" @checked={{isStatusFilterEnabled}}
                              @onClick={{action "setToTreatStatus"}} />
                  </div>
                </div>
                <WuButton @onClick={{action "resetFilters"}} @size={{small}} @isDark={{true}} @isLink={{true}}
                          @isNarrow={{true}} @class="u-spacer--bottom--none">
                  <i class="vi vi-cross vi-u-link button__icon" aria-hidden="true"></i> Herstel alle filters
                </WuButton>
                <AcmidmLogout @class="button button--alt button--small u-spacer--bottom--none u-hidden-mobile"/>
              </WuButtonGroup>
            </div>

          </div>
          <div class="grid">
            <div class="col--4-12 col--6-12--m col--6-12--s">
              <label class="label--subtle form__label">Bestuurseenheid</label>
              <BestuurseenheidSelect @value={{bestuurseenheidIds}} @onSelectionChange={{action
                      (mut bestuurseenheidIds)}} @class="ember-power-select--small"/>
              <label class="label--subtle form__label">Provincie</label>
              <ProvincieSelect @value={{provincieIds}} @onSelectionChange={{action (mut provincieIds)}}
                               @class="ember-power-select--small"/>
            </div>
            <div class="col--4-12 col--6-12--m col--6-12--s">
              <label class="label--subtle form__label">Type bestuur</label>
              <BestuurseenheidClassificatieSelect @value={{classificatieIds}} @onSelectionChange={{action
                      (mut classificatieIds)}} @class="ember-power-select--small"/>

              <label class="label--subtle form__label">Type document</label>
              <BesluitTypeSelect @value={{besluitTypeIds}} @onInit={{action (mut besluitTypes)}}
                                 @onSelectionChange={{action "selectBesluitTypes"}} @class="ember-power-select--small"/>

              {{#if regulationTypeIsSelected}}
                <label class="label--subtle form__label">Type reglement of verordening</label>
                <ToezichtRegulationTypeSelect @value={{regulationTypeId}} @onSelectionChange={{action
                        (mut regulationTypeId)}} @class="ember-power-select--small"/>
              {{/if}}
            </div>
            <div class="col--4-12 col--1-1--m col--1-1--s">
              <div class="grid">
                <div class="col--1-1 col--6-12--m">
                  <DateRange @label="Periode verstuurd" @fromValue={{sentDateFrom}} @toValue={{sentDateTo}}
                             @onChangeFromValue={{action (mut sentDateFrom)}} @onChangeToValue={{action
                          (mut sentDateTo)}} />
                </div>
                <div class="col--1-1 col--6-12--m">
                  <DateRange @label="Periode zitting / besluit" @initFromDate={{lastMonth}}
                             @fromValue={{sessionDateFrom}} @toValue={{sessionDateTo}} @onChangeFromValue={{action
                          (mut sessionDateFrom)}} @onChangeToValue={{action (mut sessionDateTo)}} />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <Toezicht::InzendingenTable @class="container-flex--contain" @model={{model}} @isLoading={{isLoadingModel}}
                                  @sort={{sort}} @page={{page}} @size={{size}} @displaySubset={{hasActiveChildRoute}} />
    </div>
  </div>
  {{outlet}}
</div>
