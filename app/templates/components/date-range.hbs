<label class="label--subtle form__label">{{label}}</label>

<WuButtonGroup @isInline={{true}} @class="button-group__inline--small">
  <WuButton @label="Alle meldingen" @onClick={{action "resetFilter"}} @class={{if (not isFilterEnabled) "button--active"}} @isAlt={{true}} @size={{small}} @isNarrow={{true}} />
  <WuButton @label="Specifieke periode" @onClick={{action "initRangeFilter"}} @class={{if isFilterEnabled "button--active"}} @isAlt={{true}} @size={{small}} @isNarrow={{true}} />
</WuButtonGroup>

{{#if isFilterEnabled}}
  <div class="accordion__content">
    <WuDateRange @onChangeFromValue={{action "updateDate" "fromDate"}} @onChangeToValue={{action "updateDate" "toDate"}} @fromValue={{fromDate}} @toValue={{toDate}} @fromPlaceholder="01.01.2012" @fromMinDate="01.01.2012" @fromMaxDate="01.01.2050" @toPlaceholder="01.01.2019" @toMinDate="01.01.2012" @toMaxDate="01.01.2050" />
  </div>
{{/if}}
