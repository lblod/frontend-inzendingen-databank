{{#data-table content=model isLoading=isLoading noDataMessage="Geen inzendingen gevonden"
     sort=sort page=page size=size class="container-flex--contain data-table" as |t|}}
  {{#t.content as |c|}}
    {{#c.header}}
      {{#unless displaySubset}}
        {{th-sortable label='Provincie' field='bestuurseenheid.provincie.naam' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      {{/unless}}
      {{th-sortable label='Bestuurseenheid' field='bestuurseenheid' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      {{th-sortable label='Type bestuur' field='bestuurseenheid.classificatie.label' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      {{th-sortable label='Type document' field='besluitType.label' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      {{#unless displaySubset}}
        {{th-sortable label='Zitting / besluit' field='sessionDate' currentSorting=sort class="u-visible--tablet-landscape-up"}}
        {{th-sortable label='Verstuurd' field='sentDate' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      {{/unless}}
      {{th-sortable label='Status' field='status' currentSorting=sort class="u-visible--tablet-landscape-up"}}
      <th class="u-hide-on-print"><!-- Actions --></th>
    {{/c.header}}
    {{#c.body as |row|}}
      {{#unless displaySubset}}
        <td class="u-visible--tablet-landscape-up">{{row.bestuurseenheid.provincie.naam}}</td>
      {{/unless}}
      <td class="u-visible--tablet-landscape-up" style="max-width: 250px;">{{row.bestuurseenheid.naam}}</td>
      <td class="u-visible--tablet-landscape-up">{{row.bestuurseenheid.classificatie.label}}</td>
      <td class="u-visible--tablet-landscape-up" style="max-width: 250px;">{{row.besluitType.label}}</td>
      {{#unless displaySubset}}
        <td class="u-visible--tablet-landscape-up">{{moment-format row.sessionDate 'DD-MM-YYYY'}}</td>
        <td class="u-visible--tablet-landscape-up">{{moment-format row.sentDate 'DD-MM-YYYY'}}</td>
      {{/unless}}
      <td>
	      {{shared/document-status-pill row.status class="u-spacer--top--tiny"}}
	    </td>
      <td class="u-hide-on-print">{{#link-to 'toezicht.inzendingen.show' row}}Bekijk{{/link-to}}</td>
    {{/c.body}}
  {{/t.content}}
{{/data-table}}
