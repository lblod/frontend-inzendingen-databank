<div class="grid grid--collapse">
  <div class="{{if this.hasActiveChildRoute "col--7-12 u-hidden--tablet-portrait-up u-visible--tablet-landscape-up"
                   "col--12-12"}}">
    <div class="container-flex--contain">
      <Submissions::SearchTable @class="container-flex--contain"
                                @model={{this.model}}
                                @isLoading={{this.isLoadingModel}}
                                @filter={{this.filter}}
                                @setFilter={{this.setFilter}}
                                @onFilterChange={{this.updateQueryParams}}
                                @sort={{this.sort}}
                                @page={{this.page}}
                                @size={{this.size}}
                                @displaySubset={{this.hasActiveChildRoute}}/>
    </div>
  </div>
  {{outlet}}
</div>
