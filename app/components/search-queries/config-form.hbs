<header class="au-u-padding-top au-u-padding-bottom au-u-padding-left-large au-u-padding-right u-border--light--bottom">
  <h1 class="au-u-h2 au-u-margin-bottom">Zoekopdrachten: Bewaar</h1>
</header>
<div class="container-flex--scroll">
  <div class="au-u-padding-top-large au-u-padding-left-large au-u-padding-right au-u-padding-bottom-large">
    <div class="au-o-grid">
      <div class="au-o-grid__item au-u-1-2@medium au-u-1-1">
        {{#if this.loadData.isRunning}}
          <span>Aan het laden...</span>
        {{else}}
          <RdfForm
                  @form={{this.form}}
                  @graphs={{this.graphs}}
                  @sourceNode={{this.sourceNode}}
                  @formStore={{this.formStore}}
                  @show={{false}}
                  @forceShowErrors={{false}} />
        {{/if}}
      </div>
    </div>
  </div>
</div>
<AuToolbar @border="top" @size="large" class="au-u-padding-left-large">
  <AuToolbarGroup>
      <AuButton @loading={{if this.save.isRunning "true"}}
        {{on "click" (perform this.save)}}>Bewaar</AuButton>
      <AuLink @linkRoute="user.search-queries.index" @skin="secondary">Annuleer</AuLink>
  </AuToolbarGroup>
</AuToolbar>