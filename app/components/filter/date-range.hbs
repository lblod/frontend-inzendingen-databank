<div class="js-accordion js-accordion--open" {{did-update this.updateSelectedValues @fromValue @toValue}}>
  <AuLabel>{{@label}}</AuLabel>

  <WuButtonGroup @isInline={{true}} @class="button-group__inline--small u-spacer--bottom--tinier">
    <WuButton @label="Alle meldingen" @onClick={{this.resetFilter}} @class={{if (not this.isFilterEnabled) "button--active"}} @isAlt={{true}} @isNarrow={{true}} />
    <WuButton @label="Specifieke periode" @onClick={{this.initRangeFilter}} @class={{if this.isFilterEnabled "button--active"}} @isAlt={{true}} @isNarrow={{true}} />
  </WuButtonGroup>

  {{#if this.isFilterEnabled}}
    <div class="accordion__content">
      <WuDateRange
              @fromValue={{this.fromDate}}
              @toValue={{this.toDate}}
              @onChangeFromValue={{fn this.updateDate "fromDate"}}
              @onChangeToValue={{fn this.updateDate "toDate"}}
              @fromPlaceholder="01.01.2012"
              @fromMinDate="01.01.2012"
              @fromMaxDate="01.01.2050"
              @toPlaceholder="01.01.2019"
              @toMinDate="01.01.2012"
              @toMaxDate="01.01.2050"
      />
    </div>
  {{/if}}
</div>
