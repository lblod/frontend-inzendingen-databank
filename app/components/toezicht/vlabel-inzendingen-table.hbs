<DataTable @content={{this.model}} @isLoading={{this.isLoading}} @noDataMessage="Geen inzendingen gevonden" @sort={{this.sort}} @page={{this.page}} @size={{this.size}} @class="container-flex--contain data-table" as |t|>
  <t.content as |c|>
    <c.header>
      <ThSortable @label="Bestuurseenheid" @field="bestuurseenheid" @currentSorting={{this.sort}} @class="u-visible--tablet-landscape-up" />
      <ThSortable @label="MAR-code" @field="nomenclature.label" @currentSorting={{this.sort}} @class="u-visible--tablet-portrait-up" />
      {{#unless this.displaySubset}}
        <ThSortable @label="Zitting / besluit" @field="sessionDate" @currentSorting={{this.sort}} @class="u-visible--tablet-landscape-up" />
        <ThSortable @label="Verstuurd" @field="sentDate" @currentSorting={{this.sort}} @class="u-visible--tablet-landscape-up" />
      {{/unless}}
      <ThSortable @label="Geldt vanaf" @field="dateOfEntryIntoForce" @currentSorting={{this.sort}} @class="u-visible--tablet-landscape-up" />
      <ThSortable @label="Geldt tot" @field="endDate" @currentSorting={{this.sort}} @class="u-visible--tablet-landscape-up" />
      <th class="u-hide-on-print"><!-- Actions --></th>
    </c.header>
    <c.body as |row|>
      <td class="u-visible--tablet-portrait-up" style="max-width: 250px;">{{row.bestuurseenheid.naam}} <span class="u-hidden--tablet-landscape-up text-fade"><br>{{row.bestuurseenheid.classificatie.label}}</span></td>
      <td class="u-visible--tablet-landscape-up">{{row.nomenclature.label}}</td>
      {{#unless this.displaySubset}}
        <td class="u-visible--tablet-landscape-up">{{moment-format row.sessionDate 'DD-MM-YYYY'}}</td>
        <td class="u-visible--tablet-landscape-up">{{moment-format row.sentDate 'DD-MM-YYYY'}}</td>
      {{/unless}}
      <td class="u-visible--tablet-landscape-up">{{moment-format row.dateOfEntryIntoForce 'DD-MM-YYYY'}}</td>
      <td class="u-visible--tablet-landscape-up">{{moment-format row.endDate 'DD-MM-YYYY'}}</td>
      <td class="u-hide-on-print"><LinkTo @route="toezicht.vlabel-inzendingen.show" @model={{row}}>Bekijk</LinkTo></td>
    </c.body>
  </t.content>
</DataTable>
